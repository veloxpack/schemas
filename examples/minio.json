{

  "remotes": [
    {
      "name": "minio-fast",
      "type": "s3",
      "remote": "minio-fast",
      "remotePath": "data/${pvc.metadata.namespace}/${pvc.metadata.name}",
      "backend": {
        "provider": "Minio",
        "endpoint": "https://minio.example.com:9000",
        "access_key_id": "minioadmin",
        "secret_access_key": "minioadmin123",
        "region": "us-east-1",
        "force_path_style": true
      }
    }
  ],
  "configurationOptions": {
    "transfers": 32,
    "checkers": 16,
    "buffer_size": "128M",
    "use_mmap": true,
    "no_check_certificate": false,
    "no_gzip_encoding": false,
    "retries": 3,
    "low_level_retries": 10,
    "timeout": "5m",
    "contimeout": "60s",
    "expect_continue_timeout": "1s"
  },
  "vfsOptions": {
    "cache_mode": "full",
    "cache_max_age": "24h",
    "cache_max_size": "50G",
    "cache_min_free_space": "10G",
    "cache_poll_interval": "15s",
    "dir_cache_time": "5m",
    "dir_perms": "0777",
    "file_perms": "0666",
    "case_insensitive": false,
    "read_chunk_size": "128M",
    "read_chunk_size_limit": "off",
    "vfs_read_ahead": "2G",
    "write_back": "5s",
    "vfs_cache_max_age": "1h",
    "vfs_cache_mode": "full",
    "vfs_write_back": "5s",
    "vfs_fast_fingerprint": true,
    "no_modtime": false,
    "no_seek": false,
    "refresh": true
  },
  "mountOptions": {
    "allow_other": true,
    "allow_root": false,
    "default_permissions": true,
    "write_back_cache": true,
    "max_read_ahead": "2G",
    "attr_timeout": "1s",
    "daemon_timeout": "0s",
    "dir_cache_time": "5m",
    "poll_interval": "1m",
    "read_only": false,
    "vfs_cache_max_age": "1h",
    "volname": "minio-storage",
    "async_read": true,
    "direct_io": false
  }
}

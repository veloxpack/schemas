{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.veloxpack.io/rclone/latest/backends/cache.json",
  "title": "Cache",
  "description": "Cache a remote (DEPRECATED - use VFS caching instead)",
  "type": "object",
  "properties": {
    "remote": {
      "type": "string",
      "title": "Remote",
      "description": "Remote to cache"
    },
    "chunk_size": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "integer"
        }
      ],
      "title": "Chunk Size",
      "description": "Size of cached file chunks",
      "default": "5M"
    },
    "info_age": {
      "type": "string",
      "title": "Info Age",
      "description": "How long to cache file structure information",
      "default": "6h"
    },
    "chunk_total_size": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "integer"
        }
      ],
      "title": "Total Chunk Size",
      "description": "Maximum size of cached chunks",
      "default": "10G"
    }
  },
  "required": [
    "remote"
  ],
  "additionalProperties": false
}

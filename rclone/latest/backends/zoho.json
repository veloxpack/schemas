{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.veloxpack.io/rclone/latest/backends/zoho.json",
  "title": "Zoho WorkDrive",
  "description": "Zoho WorkDrive cloud storage",
  "type": "object",
  "properties": {
    "region": {
      "type": "string",
      "title": "Region",
      "description": "Zoho region to connect to. Use the region your organization is registered in",
      "oneOf": [
        { "const": "com", "title": "United States / Global" },
        { "const": "eu", "title": "Europe" },
        { "const": "in", "title": "India" },
        { "const": "jp", "title": "Japan" },
        { "const": "com.cn", "title": "China" },
        { "const": "com.au", "title": "Australia" }
      ]
    },
    "upload_cutoff": {
      "oneOf": [
        { "type": "string", "pattern": "^[0-9]+(\\.[0-9]+)?[BKMGTP]?i?$" },
        { "type": "integer", "minimum": 0 }
      ],
      "title": "Upload Cutoff",
      "description": "Cutoff for switching to large file upload API (>= 10 MiB)",
      "default": "10Mi",
      "examples": ["10M", "20M", "50M"]
    },
    "encoding": {
      "type": "string",
      "title": "Encoding",
      "description": "The encoding for the backend (advanced)",
      "default": "Del,Ctl,InvalidUtf8"
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "region": "com"
    },
    {
      "region": "eu",
      "upload_cutoff": "20M"
    }
  ],
  "$comment": "Zoho uses OAuth authentication. The root_folder_id is auto-configured during OAuth based on user edition (Personal/Business)"
}

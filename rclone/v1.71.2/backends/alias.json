{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.veloxpack.io/rclone/v1.71.2/backends/alias.json",
  "title": "Alias",
  "description": "Create an alias for an existing remote with optional path prefix",
  "type": "object",
  "required": ["remote"],
  "properties": {
    "remote": {
      "type": "string",
      "title": "Remote or Path",
      "description": "Remote or path to alias. Can be 'myremote:path/to/dir', 'myremote:bucket', 'myremote:' or '/local/path'",
      "examples": [
        "myremote:path/to/dir",
        "myremote:bucket",
        "s3:my-bucket/folder",
        "drive:documents",
        "/local/path"
      ]
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "remote": "s3:my-bucket/data"
    },
    {
      "remote": "drive:important-docs"
    }
  ]
}

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.veloxpack.io/rclone/v1.71.2/backends/combine.json",
  "title": "Combine",
  "description": "Combine multiple remotes into a virtual directory tree",
  "type": "object",
  "required": ["upstreams"],
  "properties": {
    "upstreams": {
      "type": "array",
      "title": "Upstreams",
      "description": "Upstreams for combining in format 'dir=remote:path'. Use quotes for paths with spaces: '\"dir=remote:path with space\"'",
      "items": {
        "type": "string",
        "pattern": "^.+=.+$"
      },
      "minItems": 1,
      "examples": [
        ["dir1=/local/path1", "dir2=/local/path2", "dir3=/local/path3"],
        ["photos=drive:photos", "documents=dropbox:docs", "videos=onedrive:videos"],
        ["\"my dir=remote:path with space\"", "dir2=remote2:"]
      ]
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "upstreams": ["dir1=/data1", "dir2=/data2", "dir3=/data3"]
    },
    {
      "upstreams": ["photos=drive:", "docs=dropbox:", "files=onedrive:"]
    }
  ]
}

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.veloxpack.io/schemas/core/mixins/secretselector.json",
  "title": "Secret Selector",
  "description": "Reference to a key within a Kubernetes Secret.",
  "type": "object",
  "properties": {
    "key": {
      "description": "Key within the secret data map to select.",
      "type": "string"
    },
    "name": {
      "description": "Name of the Secret resource.",
      "type": "string",
      "default": ""
    },
    "optional": {
      "description": "Whether the Secret or its key is optional.",
      "type": "boolean"
    }
  },
  "required": [
    "key"
  ],
  "x-kubernetes-map-type": "atomic",
  "additionalProperties": false
}

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.veloxpack.io/schemas/rclone/v1.71.2/backends/opendrive.json",
  "title": "OpenDrive",
  "description": "OpenDrive cloud storage",
  "type": "object",
  "required": ["username", "password"],
  "properties": {
    "username": {
      "type": "string",
      "title": "Username",
      "description": "Username",
      "examples": ["user@example.com"]
    },
    "password": {
      "type": "string",
      "title": "Password",
      "description": "Password",
      "format": "password"
    },
    "chunk_size": {
      "oneOf": [
        { "type": "string", "pattern": "^[0-9]+(\\.[0-9]+)?[BKMGTP]?i?$" },
        { "type": "integer", "minimum": 0 }
      ],
      "title": "Chunk Size",
      "description": "Files will be uploaded in chunks this size. Note that these chunks are buffered in memory",
      "default": "10Mi",
      "examples": ["10M", "20M", "50M"]
    },
    "access": {
      "type": "string",
      "title": "Access Permission",
      "description": "Files and folders will be uploaded with this access permission",
      "default": "private",
      "oneOf": [
        { "const": "private", "title": "Private - Grant access to select users only" },
        { "const": "public", "title": "Public - Anyone can download with the link" },
        { "const": "hidden", "title": "Hidden - Same as public but only with URL" }
      ]
    },
    "encoding": {
      "type": "string",
      "title": "Encoding",
      "description": "The encoding for the backend (advanced)",
      "default": "Slash,LtGt,DoubleQuote,Colon,Question,Asterisk,Pipe,BackSlash,LeftSpace,LeftCrLfHtVt,RightSpace,RightCrLfHtVt,InvalidUtf8,Dot"
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "username": "user@example.com",
      "password": "obscured-password"
    },
    {
      "username": "user@example.com",
      "password": "obscured-password",
      "access": "public",
      "chunk_size": "20M"
    }
  ]
}
